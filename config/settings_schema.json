[
    {
        "name": "theme_info",
        "theme_name": "Bullet",
        "theme_version": "5.5.0", 
        "theme_author": "OpenThinking",
        "theme_documentation_url": "https://docs.openthinking.net/themes/bullet/",
        "theme_support_url": "https://openthinking.net/support/"
    },
    {
        "name": "Layout",
        "settings": [
            {
                "type": "header",
                "content": "Site width"
            },
            {
                "type": "checkbox",
                "id": "boxedLayout",
                "label": "Fixed max width",
                "default": false
            },
            {
                "type": "range",
                "label": "Max width on desktop",
                "id": "boxedLayoutWidth",
                "min": 1200,
                "max": 2400,
                "step": 100,
                "unit": "px",
                "default": 1200
            },
            {
                "type": "header",
                "content": "Border"
            },
            {
                "type": "range",
                "label": "Width",
                "id": "globalBorderWidth",
                "min": 1,
                "max": 3,
                "step": 1,
                "unit": "px",
                "default": 1
            },
            {
                "type": "select",
                "id": "BorderRadiusGlobal",
                "label": "Round corners",
                "default": "0",
                "options": [
                    { "value": "0", "label": "None" },
                    { "value": "0.5rem", "label": "Small" },
                    { "value": "1.5rem", "label": "Medium" },
                    { "value": "5rem", "label": "Large" }
                ]
            },
            {
                "type": "header",
                "content": "Images"
            },
            {
                "type": "select",
                "id": "globalImgRadius",
                "label": "Round corners",
                "default": "0",
                "options": [
                    {
                        "value": "0",
                        "label": "None"
                    },
                    {
                        "value": "1.5rem",
                        "label": "Small"
                    },
                    {
                        "value": "3rem",
                        "label": "Medium"
                    },
                    {
                        "value": "5rem",
                        "label": "Large"
                    },
                    {
                        "value": "100%",
                        "label": "Oval"
                    },
                    {
                        "value": "100vw",
                        "label": "Pill"
                    }
                ]
            },
            {
                "type": "select",
                "id": "imgPadding",
                "label": "Padding",
                "default": "--none",
                "options": [
                    {
                        "value": "--none",
                        "label": "None"
                    },
                    {
                        "value": "--margin",
                        "label": "Small"
                    },
                    {
                        "value": "--padding",
                        "label": "Large"
                    }
                ]
            },
            {
                "type": "header",
                "content": "Iconography"
            },
            {
                "type": "select",
                "id": "iconsStroke",
                "label": "Icon stroke",
                "default": "1",
                "options": [
                    { "value": "1", "label": "Thin" },
                    { "value": "2", "label": "Thick" }
                ]
            },
            {
                "type": "header",
                "content": "Dropdown caret"
            },
            {
                "type": "select",
                "id": "caretType",
                "label": "Caret type",
                "default": "caret",
